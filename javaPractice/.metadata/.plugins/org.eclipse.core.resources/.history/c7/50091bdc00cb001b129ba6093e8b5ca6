package main;
import java.text.DecimalFormat;
import java.util.Scanner;
import java.util.InputMismatchException;
public class Converter {
	int input;
	int conversion;
	static Scanner scan = new Scanner(System.in);
	//if statements
	private static void MoreThan(int selection) {
//		if(selection > 3) {
//			System.out.println("Thats not a option right now");
//			selection = scan.nextInt();
//		}
		System.out.println(selection+" Ins't a option right now");
		selection = scan.nextInt();
	}
	
	private static void EqualToOne(int selection) {
//		if(selection == 1) {
//			 System.out.println("How many US DOLLARS do you have?");
//		}
		System.out.println(selection+"How many US DOLLARS do you have?");
	}
	
	private static void EqualToTwo(int selection) {
//		if(selection == 2) {
//			 System.out.println("How many EUROS do you have?");
//		}
		System.out.println(selection+"How many EUROS do you have?");
	}
	
	private static void Options() {
		System.out.println("1. US Dollars");
		System.out.println("2. EUROS");
		System.out.println("Pressing '3' will end the unit converter application");
	}

	//Conversions
	private static void conversion(int input, double conversion) {
		System.out.println("CONVERSION!!! Your "+input+" is converted to "+conversion);
	}
	public static double UStoEURO(int number) {
		
		return number * .83;
	}
	public static double EUROtoUS(int number) {
		return number * 1.21;
	}
	
	public static void main(String[] args) {
//		Scanner scan = new Scanner(System.in);
//		System.out.println("1. US Dollars");
//		System.out.println("2. EUROS");
//		System.out.println("Pressing '3' will end the unit converter application");
		Options();
		try {
			//String formatted =  df.format(calcuated)
			int menuSelection;
			 menuSelection = scan.nextInt();
			 
//			 MoreThan(menuSelection);
			 
		while(menuSelection != 3) {
			if(menuSelection > 3) {
//				System.out.println("Thats not a option right now");
//				menuSelection = scan.nextInt();
				MoreThan(menuSelection);
			}
			if(menuSelection == 1) {
				EqualToOne(menuSelection);
			}
			if(menuSelection == 2) {
//				System.out.println("How many EUROS do you have?");
				EqualToTwo(menuSelection);
			}
//			DecimalFormat df = new DecimalFormat();
//			int v = scan.nextInt();
//			String formatted = df.format(v);
			int v = scan.nextInt();
		switch (menuSelection) {
			case 1:
				conversion(v,UStoEURO(v));
				break;
			case 2:
				conversion(v,EUROtoUS(v));
				break;
			default: 
				System.out.println("Not a valid Number");
		}
		System.out.print("Convert again? yes or no ");
		String goAgain = scan.next();
		if(goAgain.equals("yes")) { //continue start the loop over from the beginning
			Options();
			menuSelection = scan.nextInt();
			continue;
			//dont copy and paste
//			System.out.println("1. US Dollars");
//			System.out.println("2. EUROS");
//			System.out.println("Pressing '3' will end the unit converter application");
//			menuSelection = scan.nextInt();
//			 if(menuSelection > 3) {
//				 System.out.println("Thats not a option right now");
//				 menuSelection = scan.nextInt();
//			 }
//			 if(menuSelection == 1) {
//				 System.out.println("How many US DOLLARS do you have?");
//			 }
//			 if(menuSelection == 2) {
//				 System.out.println("How many EUROS do you have?");
//			 }
		} else if(goAgain.equals("no")) {	
			System.out.println("You Have Closed The Unit Converter");
			break;
		}
		}
		if(menuSelection == 3) {
			System.out.println("GoodBye!");
		}
		}catch (InputMismatchException e) {
			System.out.println("This isn't a valid entry");
			System.out.println("\nTRY AGAIN");		
			scan.close();
		}
				
	}
}
